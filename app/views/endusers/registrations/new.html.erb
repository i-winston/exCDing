<%= render "endusers/header" %>
<section class="slice slice-lg sct-color-1">
<div class ="container">
  <div class="form-group row ">
    <div style="padding: 10px; width:  400px; border: 1px solid #333333;  margin: auto;">
    <div class="col-xl-6 col-md-offset-3" >
        <h2>会員登録</h2>

        <div class="form-body">

<%= render "endusers/header" %>


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field ">
            <%= f.label :姓 %><br />
            <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
          </div>
          <div class="field">
            <%= f.label :名 %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </div>

          <div class="field">
            <%= f.label "フリガナ(セイ)" %><br />
            <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
          </div>

          <div class="field">
            <%= f.label "フリガナ(メイ)" %><br />
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
          </div>

          <div class="field">
            <%= f.label :住所  %><font size="1">  *ハイフンあり</font><br />
            <%= f.text_field :registration_address, autofocus: true, autocomplete: "registration_address" %>
          </div>

          <div class="field">
            <%= f.label :郵便番号%><font size="1">*ハイフンあり</font><br />
            <%= f.text_field :registration_postal_code, autofocus: true, autocomplete: "registration_postal_code" %>
          </div>

          <div class="field">
            <%= f.label :電話番号　 %><br />
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
          </div>


          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>


          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <font size="1"> *6文字以上</font>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <div style="padding: 6px, 12px; font-size: 20px;">
            <%= f.submit "登録" , class: "btn btn-warning"  %>
            </div>
          </div>
        <% end %>
        <%= render "endusers/shared/links" %>
      </div>
    </div>
  </div>
</div>
</section>

