<%= render "endusers/header" %>

<section class="slice slice-lg sct-color-1">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 " >
              <div class="form-user style-1">
                  <div class="form-header text-center">
                     <h2 class="form-header-title">会員登録</h2>
                  </div>
                  <div class="form-body">
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>
                          <div class="form-group">
                              <div class="field col-md-5 col-md-offset-1">
                                <%= f.label :姓 %><br />
                                <%= f.text_field :family_name, autofocus: true, class:"form-control col-md-5" %>
                              </div>
                              <div class="field col-md-5 ">
                                <%= f.label :名 %><br />
                                <%= f.text_field :first_name, autofocus: true,class:"form-control col-md-5" %>
                            </div>
                          </div>


                          <div class="form-group">
                              <div class="field col-md-5 col-md-offset-1">
                                <%= f.label "フリガナ(セイ)" %><br />
                                <%= f.text_field :family_name_kana, autofocus: true,class:"form-control col-md-5"%>
                              </div>
                              <div class="field col-md-5 ">
                                <%= f.label "フリガナ(メイ)" %><br />
                                <%= f.text_field :first_name_kana, autofocus: true,class:"form-control col-md-5" %>
                              </div>
                          </div>

                        <div class="form-group">
                            <div class="field col-md-10 col-md-offset-1">
                              <%= f.label :住所  %><font size="1">*ハイフンあり</font><br />
                              <%= f.text_field :registration_address, autofocus: true, autocomplete: "registration_address" ,class:"form-control" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="field col-md-10 col-md-offset-1">
                              <%= f.label :郵便番号%><font size="1">*ハイフンあり</font><br />
                              <%= f.text_field :registration_postal_code, autofocus: true, autocomplete: "registration_postal_code",class:"form-control" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="field col-md-10 col-md-offset-1">
                              <%= f.label :電話番号%><font size="1">*ハイフンあり</font><br />
                              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number",class:"form-control" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="field col-md-10 col-md-offset-1">
                              <%= f.label :メールアドレス %><br />
                              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="field col-md-10 col-md-offset-1">
                              <%= f.label :パスワード %>
                              <% if @minimum_password_length %>
                              <font size="1"> *6文字以上</font>
                              <% end %><br />
                              <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="field col-md-10 col-md-offset-1">
                              <%= f.label :パスワード確認 %><br />
                              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control"%>
                            </div>
                        </div>

                        <div class="actions col-md-4 col-md-offset-7">
                          <div style="padding: 6px, 12px; font-size: 20px; margin-top: 20px;">
                            <%= f.submit "登録" , class: "btn btn-block btn-warning"  %>
                          </div>
                        </div>
                      <% end %>
                </div>
              </div>
            </div>
        </div>
    </div>
</section>

