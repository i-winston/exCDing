<%= render "endusers/header" %>
<div id="wrapper">
<div class="containar">
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<div class="order-format">

				<div class="row">
					<div class="col-lg-offset-2">
						<h3><strong>注文内容</strong></h3>
						<div class="order-detail">
							<table>
								<tr>
									<td>商品小計</td>
									<td style="text-align: right;">　￥<%= @total %></td>
								</tr>
								<tr>
									<td>送料</td>
									<td style="text-align: right;">　￥<%= @carriage %></td>
								</tr>
								<tr>
									<td>総計(税込み)</td>
									<td style="text-align: right;">　￥<%= @price %></td>
								</tr>
							</table>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-lg-offset-2">
						<h3><strong>お届け先</strong></h3>
						<%= form_for @user do |f| %>
						<div class="order-address">
							<table>
								<tr>
									<td>住所</td>
									<td>
										<%= f.select :ship_address, @users.all.map{|a| [a.address, a.id]} %>
    								</td>
								</tr>
								<tr>
									<td>郵便番号</td>
									<td><%= f.select :ship_postal_code, @users.all.map{|a| [a.address, a.id]} %></td>
								</tr>
								<tr>
									<td>宛名</td>
									<td><%= f.select :ship_name, @users.all.map{|a| [a.address, a.name]} %></td>
								</tr>
							</table>
						</div>
						<% end %>
						<div><%= link_to '新規登録', new_user_address_path %></div>
					</div>
				</div>

				<div class="row">
					<div class="col-lg-offset-2">
						<h3><strong>支払い方法</strong></h3>
						<div class="cash-select">
							<table>
								<tr>
									<td>銀行振込</td>
								</tr>
								<tr>
									<td>クレジットカード</td>
								</tr>
								<tr>
									<td>代引き</td>
								</tr>
							</table>
						</div>
					</div>
				</div>
			</div>	
			<div class="row">
				<div class="col-lg-12">
					<h3 style="text-align: center;"><%= link_to '注文を確定する',orders_path %></h3>
				</div>
			</div>
				<div class="row">
				<div class="col-lg-12">
					<h4 style="text-align: center;"><%= link_to '一覧へ戻る', products_path %></h4>
				</div>
			</div>
		</div>
	</div>
</div>
</div>