<%= render "endusers/header" %>
<%= form_for @user do |f| %>
<div id="wrapper">
<div class="containar">
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<div class="order-format">

				<div class="row">
					<div class="col-lg-offset-2">
						<h3><strong>注文内容</strong></h3>
						<div>
							<table>
								<tr>
									<td>商品小計</td>
									<td style="text-align: right;">　￥<%= @total %></td>
								</tr>
								<tr>
									<td>送料</td>
									<td style="text-align: right;">　￥<%= @carriage %></td>
								</tr>
								<tr>
									<td><strong>総計(税込み)</strong></td>
									<td style="text-align: right;">　￥<%= @price %>
										<%= f.hidden_field :purchase_amount, value: @price %>
										<%= f.hidden_field :tax, value: @tax %>
										<%= f.hidden_field :freight, value: @carriage %>
										<%= f.hidden_field :order_status, value: "受付中" %>
									</td>
								</tr>
							</table>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-lg-offset-2">
						<h3><strong>お届け先</strong></h3>
						<p>※お届け先情報を選択してください。</p>
						<div class="order-address">
							<table>

								<tr>
									<td>郵便番号</td>
									<td><%= f.select :ship_postal_code, @code %></td>
								</tr>
								<tr>
									<td>住所</td>
									<td>
										<%= f.select :ship_address, @address %>
    								</td>
								</tr>

								<tr>
									<td>宛名</td>
									<td><%= f.select :ship_name, @name %></td>
								</tr>
							</table>
						</div>
						
						<div><%= link_to '新規登録', new_user_address_path %></div>
					</div>
				</div>

				<div class="row">
					<div class="col-lg-offset-2">
						<h3><strong>支払い方法</strong></h3>
						<div class="cash-select">
							<table>
								<tr>
									<td><%= f.radio_button :payment, "銀行振込" %>銀行振込</td>
								</tr>
								<tr>
									<td><%= f.radio_button :payment, "クレジット" %>クレジット</td>
								</tr>
								<tr>
									<td><%= f.radio_button :payment, "代引き" %>代引き</td>
								</tr>
							</table>
						</div>
					</div>
				</div>
			</div>	
			<div class="row">
				<div class="col-lg-12">
					<h3 style="text-align: center;"><%= f.submit "注文を確定する" %></h3>
				</div>
			</div>
				<div class="row">
				<div class="col-lg-12">
					<h4 style="text-align: center;"><%= link_to '一覧へ戻る', products_path %></h4>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
<% end %>