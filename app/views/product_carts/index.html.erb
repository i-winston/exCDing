<%= render "endusers/header" %>
<div class="container">
	<h2>ショッピングカート</h2>
	<div class="row">
		<div class="col-lg-8 ">
			<% @carts.each do |cart| %>
			<div class="product-cart">
				<table>
					<tbody>
						<tr>
							<td class="product-cart-index" style="padding-left: 5px;"><%= attachment_image_tag cart.product, :jacket, size: "115x115" %></td>
							<td class="product-cart-index">　</td>
							<td class="product-cart-index">
								<p>Teitle：</p>
								<p>ジャンル：</p>
								<p>レーベル：</p>
								<p>在庫：</p>
							</td>
							<td class="product-cart-index">
								<p><%= cart.product.product_name %></p>
								<p><%= cart.product.disks.first.songs.first.genre.genre_name %></p>
								<p><%= cart.product.label.label_name %></p>
								<p>有</p>
							</td>
							<td class="product-cart-index"><%= cart.product.price %>円</td>
							<td class="product-cart-index"></td>
							<td class="product-cart-index"　colspan="2">
								<%= form_for(cart) do |f| %>
								<p><%= f.number_field :product_count,start:cart.product_count, min:1,max:100, step:1 %>個</p>
								<%= f.submit "数量変更" %>
								<% end %>
								<p><%= link_to "削除", product_cart_path(cart.id), method: :delete, data:{confirm: '削除しますか？'} %></p>
							</td>
							<td class="product-cart-index">　</td>
						</tr>
					</tbody>
				</table>
			</div>
			<% end %>	
			<div class="row" style="padding-left: 15px;">
				<div>
					<table>
						<tr>
							<td><%= link_to '一覧画面へ',root_path, class: "btn btn-danger col-lg-10" %></td>
							<td class="product-cart-index">小計</td>
						</tr>
					</table>
				</div>
			</div>
		</div>
		<div class="a">
			<div class="col-lg-3 col-lg-offset-1">
			  <div class="product-cart">
			  	<div class="row">	
					<div class="col-lg-4 col-lg-offset-4">
						<table>
							<tbody>
								<tr>
									<td class="product-cart-index">
										<p><span>小計</span>○○円</p>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>

				<div class="row">
					<div>
						<div class="col-lg-12">
							<p class="btn btn-success col-xs-12">購入画面へ進む</p>
						</div>
					</div>
				</div>
			  </div>		  
			</div>
		</div>
	</div>
</div>