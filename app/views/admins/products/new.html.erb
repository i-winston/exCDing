<%= form_for(@product) do |f| %>
  <div class="field">
    <%= f.label :jacket_id, "ジャケット画像" %>
    <%= f.attachment_field :jacket_id %>
  </div>

  <div class="field">
    <%= f.label :product_name, "アルバム/シングル名" %>
    <%= f.text_field :product_name %>
  </div>

  <div class="field">
    <%= f.label :label_id, "レーベル名" %>
    <%= f.text_field :label_id %>
  </div>

<h4>ディスク</h4>
  <div id="disks">
    <%= f.fields_for :disks do |d| %>
      <%= render 'disk_fields', f: d %>
    <% end %>
    <div id="links">

      <%= link_to_add_association "ディスクを追加",f, :disks %>
    </div>
  </div>

  <div class="field">
    <%= f.label :product_status, "ステータス" %>
    <%= f.text_field :product_status %>
  </div>

  <div class="field">
    <%= f.label :product_stock, "在庫数" %>
    <%= f.text_field :product_stock %>
  </div>

  <div class="field">
    <%= f.label :price, "価格(税抜)" %>
    <%= f.text_field :price %>
  </div>

  <%= f.submit "新規登録" %>

<% end %>