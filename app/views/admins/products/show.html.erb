<%= render "endusers/admin" %>
<div class="container">
    <h2>商品詳細</h2>
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
      	<%= attachment_image_tag @product, :jacket, size: "300x300" %>
      </div>
      <div class="col-md-6">
        <div class="product-title"><%= @product.product_name %></div><br>
        <p><div class="product-artist">アーティスト：<%= @product.disks.first.songs.first.artist.artist_name %></div></p>
        <p>レーベル：<%= @product.label.label_name %></p>
        <p>ジャンル：<%= @product.disks.first.songs.first.genre.genre_name %></p>
        <p>価格(税込)：￥<%= @price %>円</p>
        <th>在庫：</th>
        <% if @product.product_stock == 0 %>
          <th>無</th>
        <% else %>
          <th>有</th>
        <% end %>

         <h4>収録曲</h4>
          <% @disks.each do |disk| %>
            <p><label>ディスク名：</label><%= disk.disk_name %></p>
            <ul class="song-list">
              <% disk.songs.each do |song| %>
                <li><%= song.number %>.<%= song.song_name %></li>
              <% end %>
            </ul>
          <% end %>
          <div>
            <%= link_to "編集", edit_admins_product_path, class: "btn btn-success btn-sm" %>
            <%= link_to "削除", admins_product_path, class: "btn btn-danger btn-sm", method: :delete, data:{ confirm: "本当に削除しますか？" } %>
          </div>
    	</div>
    </div>

    <div class="row">
      <div class="col-md-3 col-md-offset-2">
        <%= link_to "商品一覧へ", admins_products_path, class: "btn btn-default btn-lg btn-block" %>
      </div>
    </div>
</div>