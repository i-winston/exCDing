<h3>ジャンル登録</h3>

	<%= form_for(@genre) do |f| %>
		<%= f.text_field :genres_name, "新規登録するジャンル名を入力" %>
		<%= f.submit "新規登録" %>
	<% end %>

	<table>
        <thead>
          	<tr>
              	<th>登録No.</th>
              	<th>ジャンル名</th>
            </tr>
         </thead>

        <tbody>
            <% @genres.each do |genre| %>
              	<tr>
                	<td><%= genre.id %></td>
                	<td><%= genre.genre_name %></td>
                	<td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, data:{ confirm: "本当に削除しますか？" } %></td>
              	</tr>
            <% end %>
        </tbody>
    </table>