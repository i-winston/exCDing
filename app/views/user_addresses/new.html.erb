    <%= form_for(@address) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <div class="field">
          <%= f.label "氏名" %><br />
          <%= f.text_field :user_name,
           autofocus: true, class:"form-control " ,
            id:"name", placeholder:"氏名" %>
        </div>
      </div>

      <div class="form-group">
          <div class="field">
            <%= f.label :住所  %><font size="1">*ハイフンあり</font><br />
            <%= f.text_field :address, autofocus: true, autocomplete: "registration_address" ,class:"form-control", id:"address",placeholder:"住所" %>
          </div>
      </div>
      <div class="form-group">
          <div class="field">
            <%= f.label :郵便番号%><font size="1">*ハイフンあり/半角英数</font><br />
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "registration_postal_code",class:"form-control",id:"registration_postal_code", placeholder:"郵便番号/半角英数" %>
          </div>
      </div>

      <%= f.submit "新規登録", class: "btn btn-success btn-sm" %>

    
    <% end %>