<%= render "endusers/header" %>
<h2>商品一覧</h2>
    <div class="table-responsive">
      <table id="select" class="table table-hover">
          <% @products.each do |product| %>
            <tr>
              <div><%= attachment_image_tag product, :jacket, size: "300x300" %></div>
              <div><%= product.product_name %></div>
              <div><%= product.disks.first.songs.first.artist.artist_name %></div>
              <div>￥<%= product.price %></div>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
